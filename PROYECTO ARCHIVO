    fread(&alumno, sizeof(alumno), 1, archivo);
    while(!feof(archivo)){
        if(strcmp(sx,alumno.Sexo) == 0){ //compara las dos cadenas para comprobar que sean iguales
            printf("\nSexo del alumno: %s",sx);
